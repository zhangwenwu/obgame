<view class="">
<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">欢迎,{{userInfo.nickName}}<image class="uploader-image" src="{{userInfo.avatarUrl}}"></image></view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">你的当前位置</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindfocus='startLocation' placeholder="请输入" value="{{start_input}}" />
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">你想去的地方</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindfocus='endLocation' placeholder="请输入" value="{{end_input}}" />
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">出行方式</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindfocus='go_type' placeholder="请选择" value="{{go_type}}" />
      </view>
    </view>
  </view>

</view>

<button wx:if="{{hasUserInfo}}" type="primary" size="default" bindtap="go_but">立即出发</button>
<button wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo" size="default" >微信授权登录</button>

